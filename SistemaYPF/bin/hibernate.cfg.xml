<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<!-- MODIFICAR -->
		<property name="connection.url">jdbc:mysql://localhost/bd-hibernate-ypf
		</property>
		<!-- MODIFICAR -->
		<property name="connection.username">root</property>
		<!-- MODIFICAR -->
		<property name="connection.password"></property>
		<property name="hibernate.enable_lazy_load_no_trans">true</property>
		<property name="connection.pool_size">1</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="show_sql">false</property>
		<!-- en true muestra hql en consola -->
		<!-- Mapeo Entidades -->
		<!-- MODIFICAR -->
		<mapping resource="mapeos/Cliente.hbm.xml" />
		<mapping resource="mapeos/Tarjeta.hbm.xml" />
		<mapping resource="mapeos/Producto.hbm.xml" />
		<mapping resource="mapeos/Compra.hbm.xml" />
	</session-factory>
</hibernate-configuration>